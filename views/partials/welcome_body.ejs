<div class="container">
	<%
		for (var i = 0; i < 5; i++) { %>
			<div class="sub" id="<%= "div"+i%>">
				<form method="POST" action="#">
					<button type="submit" name="id_vet" value="<%= vetements[i].id %>">
						<img src="/public<%= vetements[i].chemin%>">
					</button>
				</form>
			</div>
		<% }
	%>
</div>
<script type="text/javascript">
	var posImg = [1, 2, 3, 0, -1];
	var divImg = [
		document.getElementById("div0"),
		document.getElementById("div1"),
		document.getElementById("div2"),
		document.getElementById("div3"),
		document.getElementById("div4")
	];
	function reloadCss() {
		for (var i = 0; i < divImg.length; i++) {
			if (posImg[i] == 0 || posImg[i] == -1) {
				divImg[i].style.display = "none";
			} else {
				divImg[i].style.display = "block";
				divImg[i].style.gridColumn = posImg[i];
			}
		}
	}
	var scrollTimer = setInterval(function() {
		for (var i = 0; i < posImg.length; i++) {
			if (posImg[i] >= 3) {
				posImg[i] = -1;
			} else {
				posImg[i] = posImg[i] + 1;
			}
		}
		reloadCss();
	}, 3000);
</script>